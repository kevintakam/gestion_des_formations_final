@model gestion_des_formations_final.Models.SessionsVm

@{
    Layout = null;
}

<dl class="row">
    <dt class="col-sm-4 col-md-4 col-lg-4">
        Formation:
    </dt>
    <dd class="col-sm-8 col-md-8 col-lg-8">
        @ViewBag.Session.Formation.Intitule
    </dd>
    <dt class="col-sm-4 col-md-4 col-lg-4">
        @Html.DisplayNameFor(model => model.DateDebut):
    </dt>
    <dd class="col-sm-8 col-md-8 col-lg-8">
        @Html.DisplayFor(model => model.DateDebut)
    </dd>
    <dt class="col-sm-4 col-md-4 col-lg-4">
        @Html.DisplayNameFor(model => model.DateFin):
    </dt>
    <dd class="col-sm-8 col-md-8 col-lg-8">
        @Html.DisplayFor(model => model.DateFin)
    </dd>

    <dt class="col-sm-4 col-md-4 col-lg-4">
        Lieu - Salle:
    </dt>
    <dd class="col-sm-8 col-md-8 col-lg-8">
        @ViewBag.SalleId.Salle.Lieu - @ViewBag.SalleId.Salle.Designation
    </dd>
    <dt class="col-sm-4 col-md-4 col-lg-4">
        @Html.DisplayNameFor(model => model.Statut):
    </dt>
    @if (Model.Statut == "terminé")
    {
        <dd class="col-sm-8 col-md-8 col-lg-8 text-danger">
            @Html.DisplayFor(model => model.Statut)
        </dd>
    }
    else if (Model.Statut == "planifié")
    {
        <dd class="col-sm-8 col-md-8 col-lg-8 text-warning">
            @Html.DisplayFor(model => model.Statut)
        </dd>
    }
    else
    {
        <dd class="col-sm-8 col-md-8 col-lg-8 text-success">
            @Html.DisplayFor(model => model.Statut)...
        </dd>
    }
    <dt class="col-sm-4 col-md-4 col-lg-4">
        Formateur:
    </dt>
    <dd class="col-sm-8 col-md-8 col-lg-8">
        Mr/Mlle.  @ViewBag.FormateurId.Formateur.Nom
    </dd>
    <dt class="col-sm-4 col-md-4 col-lg-4">
        Nombre de Participants:
    </dt>
    <dd class="col-sm-8 col-md-8 col-lg-8">
        @ViewBag.participants
    </dd>
</dl>
    <hr />
    @{
        var participants = (List<ParticipantSession>)ViewData["listes"]; // Cast the list
    }
    <dt class="col-md-12 text-center">
        Liste des Participants
    </dt>
    <br />
    <dl class="row">
        <dt class="col-md-3">
            Nom
        </dt>
        <dt class="col-md-3">
            Prenom
        </dt>
        <dt class="col-md-3">
            Telephone
        </dt>
        <dt class="col-md-3">
            Statut
        </dt>
    </dl>
    @foreach (var p in participants)
    {
        <dl class="row">
            <dd class="col-md-3">
                @p.Participant.Nom
            </dd>
            @if (!string.IsNullOrEmpty(p.Participant.Prenom))
            {
                <dd class="col-md-3">
                    @p.Participant.Prenom
                </dd>
            }
            else
            {
                <dd class="col-md-3">
                    .....
                </dd>

            }
            <dd class="col-md-3">
                @p.Participant.Telephone
            </dd>
            <dd class="col-md-3">
                @p.Participant.Statut
            </dd>
        </dl>
    }
    <hr />
    <dl class="row col-md-12">
        <dt class="col-md-2">
            @Html.DisplayNameFor(model => model.DateAjout)
        </dt>
        <dd class="col-md-4 text-danger">
            @Html.DisplayFor(model => model.DateAjout)
        </dd>
        <dt class="col-md-2">
            Par
        </dt>
        <dd class="col-md-4">
            Audrey Demgne
        </dd>
    </dl>
    <dl class="row col-md-12">
        <dt class="col-md-2">
            @Html.DisplayNameFor(model => model.DateModif)
        </dt>
        <dd class="col-md-4 text-success">
            @Html.DisplayFor(model => model.DateModif)
        </dd>
        <dt class="col-md-2">
            Par
        </dt>
        <dd class="col-md-4">
            Audrey Demgne
        </dd>

    </dl>

