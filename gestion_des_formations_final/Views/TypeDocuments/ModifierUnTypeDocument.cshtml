@model gestion_des_formations_final.Models.TypeDocument

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <!-- [ form-element ] start -->
    <div class="col-sm-2"></div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="ModifierUnTypeDocument">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="TypeDocumentId" />
                            <div class="form-group">
                                <label asp-for="Intitule" class="control-label">Intitulé*</label>
                                <input asp-for="Intitule" class="form-control" style="text-transform:uppercase"/>
                                <span asp-validation-for="Intitule" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <textarea asp-for="Description" class="form-control" id="description" rows="2"></textarea>
                            </div>
                            <div class="form-group">
                                <button type="reset" class="btn  btn-danger"><a class="text-white" asp-controller="TypeDocuments" asp-action="Index"> Annuler</a></button>
                                <input type="submit" value="Mise à jour" class="btn  btn-success fa-pull-right" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-2"></div>
</div>

                @section Scripts {
                    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                }
