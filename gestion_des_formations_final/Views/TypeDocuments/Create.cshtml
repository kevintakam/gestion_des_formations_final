@model gestion_des_formations_final.Models.TypeDocument

@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <!-- [ form-element ] start -->
    <div class="col-sm-2"></div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form class="center" asp-action="Create">
                            <div class="col-md-12  fa-pull-right">
                                <span class="text-danger fa-pull-right">@ViewBag.message</span>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Intitule">Intitule*</label>
                                <input type="text" asp-for="Intitule" class="mb-3 form-control form-control-sm" placeholder="Entrer l'intitulé du document">
                                <span asp-validation-for="Intitule" class="form-text  text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <textarea asp-for="Description" class="form-control" id="description" rows="2"></textarea>
                            </div>
                            <button type="reset" class="btn  btn-danger fa-pull-right" style="margin-left:15px;"><a class="text-white" asp-controller="TypeDocuments" asp-action="Index">Annuler</a></button>
                            <button type="submit" class="btn  btn-primary fa-pull-right">Ajouter</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-2"></div>
    <!-- [ form-element ] end -->
</div>
