@model gestion_des_formations_final.Models.Certification
<div class="row">
    <!-- [ form-element ] start -->
    <div class="col-sm-2"></div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>Ajouter une certification</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form class="center" asp-action="ModifierUneCertification">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="CertificationId" />
                            <div class="form-group">
                                <label asp-for="Designation">Désignation<span class="text-c-blue">*</span></label>
                                <input type="text" asp-for="Designation" class="mb-3 form-control form-control-sm" style="text-transform:uppercase" placeholder="Entrer la désignation de la certification">
                                <span asp-validation-for="Designation" class="form-text  text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OrganismeId" class="control-label">Organisme<span class="text-c-blue">*</span></label>
                                <select asp-for="OrganismeId" class="form-control" asp-items="ViewBag.OrganismeId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <textarea asp-for="Description" class="form-control" id="description" rows="2"></textarea>
                            </div>
                            <div>
                                <button type="reset" class="btn  btn-danger fa-pull-left" style="margin-left:15px;"><a class="text-white" asp-controller="Certifications" asp-action="Index">Annuler</a></button>
                                <button type="submit" class="btn  btn-success fa-pull-right">Mise à jour</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-2"></div>
    <!-- [ form-element ] end -->
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
