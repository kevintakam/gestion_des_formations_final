@model IEnumerable<gestion_des_formations_final.Models.Formateur>


<div class="row">
    <!-- Multi-column table start -->
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <button type="button" class="btn  btn-primary"><a class="text-white" asp-controller="Formateur" asp-action="Create"><i class="fa fa-plus"></i>&nbsp;&nbsp;Ajouter un formateur</a></button>
            </div>
            <div class="card-body">
                <div class="dt-responsive table-responsive">
                    <table id="multi-colum-dt" class="table table-striped table-bordered nowrap">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nom)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Prenom)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Adresse)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateAnniv)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Telephone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Type)
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nom)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Prenom)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Adresse)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateAnniv)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Telephone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Type)
                                    </td>
                                    <td>
                                        <a class="text-success" asp-action="Edit" asp-route-id="@item.FormateurId"><i class="icon feather icon-edit f-16  text-c-green"></i></a>

                                        <a class="text-danger" onclick="Delete(@item.FormateurId)"><i class="feather icon-trash-2 ml-3 f-16 text-c-red"></i></a>
                                        &nbsp;&nbsp;&nbsp;
                                        <a class="text-primary" asp-action="Details" asp-route-id="@item.FormateurId"><i class="fa fa-eye"></i></a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {

    <script>
        function Delete(id) {
            $.ajax({
                url: "Formateur/Delete/",
                data:
                {
                    id: id
                },
                type: "GET",
                success: function (data) {
                    console.log(data);
                    sweetAlert
                        ({
                            title: "êtes vous sûre",
                            text: "de vouloir supprimer cette formation",
                            type: "Warning",
                            showCancelButton: true,
                            confirmButtonColor: "#DD6B55",
                            cancelButtonColor: '#d33',
                            confirmButtonText: "Yes, delete it!",
                            cancelButtonText: 'No, cancel!',
                        }).then(function (isConfirm) {
                            if (isConfirm) {
                                sweetAlert(
                                    'Deleted',
                                    'votre formation a bien été supprimée',
                                    'success'
                                ),
                                    location.reload();
                            } else {
                                swal("Oops!!!!", "une erreur s'est produite", "error");
                            }
                        });
                },
                error: function (data) {
                    swal("Oops!!!!", "une erreur s'est produite", "error");
                }
            });
        }

    </script>
}
