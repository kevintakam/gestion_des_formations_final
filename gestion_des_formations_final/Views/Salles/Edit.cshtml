@model gestion_des_formations_final.Models.Salle

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <!-- [ form-element ] start -->
    <div class="col-sm-2"></div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Edit" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="SalleId" />
                            <div class="form-group">
                                <label asp-for="Designation" class="control-label"></label>
                                <input asp-for="Designation" class="form-control" />
                                <span asp-validation-for="Designation" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Lieu" class="control-label">Lieu*</label>
                                <input asp-for="Lieu" class="form-control" />
                                <span asp-validation-for="Lieu" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="reset" class="btn  btn-danger"><a class="text-white" asp-controller="Salles" asp-action="Index"> Annuler</a></button>
                                <input type="submit" value="Mise à jour" class="btn  btn-primary fa-pull-right" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
