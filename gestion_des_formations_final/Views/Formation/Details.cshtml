@model gestion_des_formations_final.Models.Formation
@{
    Layout = null;
}


    <div >
        <div>
            <div>
                <h5 >@Html.DisplayFor(model => model.Intitule)</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div>
                <h5>Objectif</h5>
                <p>
                    @Html.DisplayFor(model => model.Description)
                </p>
                <hr />
                <span style="margin-right: 80px; font-weight: bold; font-size: 16px;"> @Html.DisplayNameFor(model => model.Prix): <i class="text-danger">@Html.DisplayFor(model => model.Prix)</i></span>
                <span style="font-weight: bold; font-size: 16px;"> @Html.DisplayNameFor(model => model.Duree): <i class="text-danger">@Html.DisplayFor(model => model.Duree) jour(s)</i></span><br />
                <span style="font-weight: bold;font-size:16px;">
                    @Html.DisplayNameFor(model => model.FormationCertifiee):
                    @if (Model.FormationCertifiee == true)
                    {
                        <i class="text-danger">
                            Oui
                        </i>
                    }
                    else
                    {
                        <i class="text-danger">
                            Non
                        </i>
                    }
                   
                </span>
        </div>
    </div>




